
#recommend top n similar users based on euclidean distances
import numpy as np
def similaruser(dict, person, n):
    q=[]
    for id in dict:
        if(id!=person):
            q.append((id,float(euclid(dict,person,id))))   
    q.sort(key=lambda tup:tup[1])
    top=q[:n]
    print top
