#recommend top n similar users based on pearson correlation
import math
def simiuser(dict,person,n):
    t=[]
    for id in dict:
        if(id!=person):
            value=float(pearson(dict,person,id))
            if(math.isnan(value)==False):
                t.append((id,value))            
    t.sort(key=lambda tup:tup[1],reverse=True)
   
    top=t[:n]
    print top
